v23.BorderSizePixel = 0
v23.Position = UDim2.new(0.1, 0, 0.1, 0)  -- Position of the floating button
v23.Size = UDim2.new(0, 100, 0, 100)  -- Size of the floating logo
v23.Draggable = true  -- Makes it draggable
